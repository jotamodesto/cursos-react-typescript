{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 3],
    "linebreak-style": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "off",
    "no-unused-vars": "warn"
  },
  "globals": {
    "NegociacaoController": "writable",
    "Bind": "writable",
    "DateHelper": "writable",
    "ListaNegociacoes": "writable",
    "Mensagem": "writable",
    "Negociacao": "writable",
    "ConnectionFactory": "writable",
    "HttpService": "writable",
    "NegociacaoService": "writable",
    "ProxyFactory": "writable",
    "MensagemView": "writable",
    "NegociacoesView": "writable",
    "View": "writable",
    "NegociacaoDAO": "writable"
  }
}
